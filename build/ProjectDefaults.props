<?xml version="1.0" encoding="utf-8"?>
<Project>

  <PropertyGroup>
    <Deterministic>true</Deterministic>
    <Features>strict</Features>
    <LangVersion>8.0</LangVersion>
    <DebugType>portable</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <PlatformTarget>x64</PlatformTarget>

    <!-- will be set to true at individual projects -->
    <IsPackable>false</IsPackable>
    <NoWarn>NU5105</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
    <Configurations>Debug;Release;Diagnostics</Configurations>
    <DefineConstants Condition=" '$(Configuration)' == 'Diagnostics' ">DIAGNOSTICS;DEBUG</DefineConstants>
  </PropertyGroup>

  <PropertyGroup>
    <EnyimBuildRewritersLogToExtraArgs>-p LoggerInterfaces=Enyim.ILogger</EnyimBuildRewritersLogToExtraArgs>
  </PropertyGroup>

  <!-- debug -->
  <PropertyGroup>
    <!--<EnableEnyimBuildRewritersEventSource>False</EnableEnyimBuildRewritersEventSource>-->
    <!--<EnableSourceLink>false</EnableSourceLink>-->
    <!--<EnableEnyimBuildRewritersLogTo>False</EnableEnyimBuildRewritersLogTo>-->
  </PropertyGroup>

</Project>

